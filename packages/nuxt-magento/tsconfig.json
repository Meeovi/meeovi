{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2019",
    "baseUrl": ".",
    "paths": {
      "@meeovi/normalizer-core": ["../normalizer-core"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["dist", "node_modules", "playground"]
}
